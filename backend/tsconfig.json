{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Use ES modules
    "moduleResolution": "Node", // Node-style resolution
    "esModuleInterop": true, // Allows default imports from CommonJS
    "allowSyntheticDefaultImports": true, // Needed for some CJS packages
    "strict": true,
    "outDir": "dist",
    "baseUrl": "../", // root folder
    "paths": {
      "@shared/*": ["shared/*"] // alias for shared folder
    }
  }
}
