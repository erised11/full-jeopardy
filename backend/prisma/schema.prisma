generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(uuid())
  email String @unique
  games Game[]
}

model Game {
  id       String @id @default(uuid())
  userId   String
  title    String
  gameData Json
  user     User   @relation(fields: [userId], references: [id])
}
